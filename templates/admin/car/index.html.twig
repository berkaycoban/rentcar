{% extends 'admin/base.html.twig' %}

{% block title %}Cars{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6 page-title">
                        <h1>All Cars</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">All Cars</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
            <div class="col-12">
                <div class="box-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{label}} alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h4><i class="icon fa fa-check"></i> Alert!</h4>
                                {{message}}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
                {% if cars is not empty %}
                <div class="card">
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>Brand</th>
                                    <th>Model</th>
                                    <th>Year</th>
                                    <th>Fuel</th>
                                    <th>Gear</th>
                                    <th>KM</th>
                                    <th>Daily Price</th>
                                    <th>Daily Max KM</th>
                                    <th>Created at</th>
                                    <th>##</th>
                                    <th>##</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set role = app.user.roles[1] ?? app.user.roles[0] %}
                                {% set company = app.user.company.id %}

                                {% for car in cars %}
                                    {% if role == 'ROLE_SUPER_ADMIN' %}
                                    {# Show all cars #}
                                        <tr>
                                            <td>{{ car.brand }}</td>
                                            <td>{{ car.model }}</td>
                                            <td>{{ car.year }}</td>
                                            <td>{{ car.fuel }}</td>
                                            <td>{{ car.gear }}</td>
                                            <td>{{ car.km }} km</td>
                                            <td>{{ car.dailyPrice }} ₺</td>
                                            <td>{{ car.dailyMaxKm }} km</td>
                                            <td>{{ car.createdAt|date('d F Y') }}</td>
                                            <td>
                                                <a href="{{ path('app_admin_car_create', {id: car.id}) }}" class="btn btn-sm btn-info">Update</a>
                                            </td>
                                            <td>
                                                {% include 'admin/car/_delete_form.html.twig' %}
                                            </td>
                                        </tr>
                                    {% elseif car.ownerId == company %}
                                    {# Show all cars that company has have #}
                                        <tr>
                                            <td>{{ car.brand }}</td>
                                            <td>{{ car.model }}</td>
                                            <td>{{ car.year }}</td>
                                            <td>{{ car.fuel }}</td>
                                            <td>{{ car.gear }}</td>
                                            <td>{{ car.km }} km</td>
                                            <td>{{ car.dailyPrice }} ₺</td>
                                            <td>{{ car.dailyMaxKm }} km</td>
                                            <td>{{ car.createdAt|date('d F Y') }}</td>
                                            <td>
                                                <a href="{{ path('app_admin_car_create', {id: car.id}) }}" class="btn btn-sm btn-info">Update</a>
                                            </td>
                                            <td>
                                                {% include 'admin/car/_delete_form.html.twig' %}
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                {% else %}
                    <div class="alert alert-warning alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4 class="mb-0">No Cars!</h4>
                    </div>
                {% endif %}
            </div>
        </section>
    </div>
{% endblock %}