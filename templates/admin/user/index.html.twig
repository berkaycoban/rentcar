{% extends 'admin/base.html.twig' %}

{% block title %}Users{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6 page-title">
                        <h1>All Users</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active">All Users</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <section class="content">
            <div class="col-12">
                <div class="box-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{label}} alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                <h4><i class="icon fa fa-check"></i> Alert!</h4>
                                {{message}}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>


                <div class="card">
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>Full name</th>
                                    <th>Username</th>
                                    <th>Role</th>
                                    <th>Created at</th>
                                    <th>##</th>
                                    <th>##</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% set role = app.user.roles[1] ?? app.user.roles[0] %}
                            {% set company = app.user.company.id %}

                            {% for user in users %}
                                {% if user.roles[0] != 'ROLE_USER' %}
                                    {% if role == 'ROLE_SUPER_ADMIN' %}
                                        <tr>
                                            <td>{{ user.fullName }}</td>
                                            <td>{{ user.username }}</td>
                                            <td>{{ user.roles[0] }}</td>
                                            <td>{{ user.createdAt|date('d F Y h:m:s') }}</td>
                                            <td>
                                                <a href="{{ path('app_admin_user_create', {id: user.id}) }}" class="btn btn-sm btn-info">
                                                    <i class="fas fa-sync-alt" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                            <td>
                                                {% if app.user.id != user.id %}
                                                    {% include 'admin/user/_delete_form.html.twig' %}
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% elseif user.company.id == company %}
                                        <tr>
                                            <td>{{ user.fullName }}</td>
                                            <td>{{ user.username }}</td>
                                            <td>{{ user.roles[0] }}</td>
                                            <td>{{ user.createdAt|date('d F Y h:m:s') }}</td>
                                            <td>
                                                <a href="{{ path('app_admin_user_create', {id: user.id}) }}" class="btn btn-sm btn-info">
                                                    <i class="fas fa-sync-alt" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                            <td>
                                                {% if app.user.id != user.id %}
                                                    {% include 'admin/user/_delete_form.html.twig' %}
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </section>
    </div>
{% endblock %}