{% set route = app.request.attributes.get('_route') %}
{% set parent_route = route|split('_') %}
<!-- Sidebar -->
<div class="sidebar">
    <div class="user-panel mt-3 pb-3 mb-3 d-flex justify-content-center align-items-center">
        <div class="info">
            <a href="{{ path('app_admin_user_create', {id: app.user.id}) }}"> Welcome, {{ app.user.fullName }}</a>
        </div>
    </div>
    <!-- Sidebar Menu -->
    <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <li class="nav-item">
                <a href="{{ path('app_admin_dashboard') }}" class="nav-link {% if parent_route[2] == 'dashboard' %}active{% endif %}">
                    <i class="nav-icon fas fa-tachometer-alt"></i>
                    <p>Dashboard</p>
                </a>
            </li>
            <li class="nav-item {% if parent_route[2] == 'user' %}menu-open{% endif %}">
                <a href="#" class="nav-link {% if parent_route[2] == 'user' %}active{% endif %}">
                    <i class="nav-icon fas fa-users"></i>
                    <p>
                        Users
                        <i class="fas fa-angle-left right"></i>
                    </p>
                </a>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <a href="{{ path('app_admin_user_list') }}" class="nav-link {% if parent_route[3] is defined and parent_route[2] == 'user' and parent_route[3] == 'list' %}active{% endif %}">
                            <i class="fa fa-list nav-icon"></i>
                            <p>All users</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_admin_user_create') }}" class="nav-link {% if parent_route[3] is defined and parent_route[2] == 'user' and parent_route[3] == 'create' %}active{% endif %}">
                            <i class="fa fa-plus nav-icon"></i>
                            <p>Create a new user</p>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item {% if parent_route[2] == 'company' %}menu-open{% endif %}">
                <a href="#" class="nav-link {% if parent_route[2] == 'company' %}active{% endif %}">
                    <i class="nav-icon fas fa-building"></i>
                    <p>
                        Company
                        <i class="fas fa-angle-left right"></i>
                    </p>
                </a>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <a href="{{ path('app_admin_company_list') }}" class="nav-link {% if parent_route[3] is defined and parent_route[2] == 'company' and parent_route[3] == 'list' %}active{% endif %}">
                            <i class="fa fa-list nav-icon"></i>
                            <p>All companies</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_admin_company_create') }}" class="nav-link {% if parent_route[3] is defined and parent_route[2] == 'company' and parent_route[3] == 'create' %}active{% endif %}">
                            <i class="fa fa-plus nav-icon"></i>
                            <p>Create a new company</p>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item {% if parent_route[2] == 'car' %}menu-open{% endif %}">
                <a href="#" class="nav-link {% if parent_route[2] == 'car' %}active{% endif %}">
                    <i class="nav-icon fas fa-car"></i>
                    <p>
                        Cars
                        <i class="fas fa-angle-left right"></i>
                    </p>
                </a>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <a href="{{ path('app_admin_car_list') }}" class="nav-link {% if parent_route[3] is defined and parent_route[2] == 'car' and parent_route[3] == 'list' %}active{% endif %}">
                            <i class="fa fa-list nav-icon"></i>
                            <p>All cars</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_admin_car_create') }}" class="nav-link {% if parent_route[3] is defined and parent_route[2] == 'car' and parent_route[3] == 'create' %}active{% endif %}">
                            <i class="fa fa-plus nav-icon"></i>
                            <p>Buy a new car</p>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item {% if parent_route[2] == 'transaction' %}menu-open{% endif %}">
                <a href="#" class="nav-link {% if parent_route[2] == 'transaction' %}active{% endif %}">
                    <i class="nav-icon fas fa-exchange-alt"></i>
                    <p>
                        Transactions
                        <i class="fas fa-angle-left right"></i>
                    </p>
                </a>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <a href="{{ path('app_admin_transaction_list') }}" class="nav-link {% if parent_route[3] is defined and parent_route[2] == 'transaction' and parent_route[3] == 'list' %}active{% endif %}">
                            <i class="fa fa-list nav-icon"></i>
                            <p>All transactions</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_admin_transaction_create') }}" class="nav-link {% if parent_route[3] is defined and parent_route[2] == 'transaction' and parent_route[3] == 'create' %}active{% endif %}">
                            <i class="fa fa-plus nav-icon"></i>
                            <p>Create a new transaction</p>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    <!-- /.sidebar-menu -->
</div>
<!-- /.sidebar -->